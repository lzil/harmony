<!doctype html>
<html>
  <head>
    <title>API practice</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="abcjs_editor_1.12-min.js" type="text/javascript"></script>
        <script src='https://cdn.firebase.com/js/client/2.0.4/firebase.js'></script>
        <link type="text/css" rel="stylesheet" href="midiButton.css"/>
  </head>
  <body>
    <div id='messagesDiv'></div>
    <textarea type='text' id='messageInput' placeholder='Message'></textarea>

    <script>
      var myDataRef = new Firebase('https://brilliant-fire-2071.firebaseio.com/');

      $('#messageInput').on('input', function() {
        var text = $('#messageInput').val();
        myDataRef.push({text: text});
      });

      myDataRef.on('child_added', function(snapshot) {
        var message = snapshot.val();
        $('#messageInput').val(message.text).change();
      });
    </script>

    <textarea id="abc" rows="4" cols="50"></textarea>


    <div class='output'>
        <div id="canvas0"></div>
        <canvas id="PDFcanvas" width="1000px" height="600px"></canvas> 
        <button id="cmd">generate PDF</button>
        </div>


    <div id="warnings"></div>
    <script type="text/javascript">
    window.onload = function() {
      abc_editor = new ABCJS.Editor("messageInput", { canvas_id: "canvas0", warnings_id:"warnings"});
    } 

    </script>
  </body>
</html>

