<% provide(:title, 'All users') %>
<h1>All users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>

      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <% if current_user.username == 'liang' and user != current_user%>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>